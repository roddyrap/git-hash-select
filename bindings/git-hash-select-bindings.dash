function inline_git_hash_select
{
    local chosen_commit_hash
    chosen_commit_hash="$(git hash-select ${GIT_HASH_SELECT_NO_COLOR:+--no-color} ${GIT_HASH_SELECT_NO_PREVIEW:+--no-preview} --quiet --inline --no-copy)" || return $?

    READLINE_LINE="${READLINE_LINE:0:${READLINE_POINT}}${chosen_commit_hash}${READLINE_LINE:${READLINE_POINT}}"
    READLINE_POINT=$(( ${READLINE_POINT} + ${#chosen_commit_hash} ))
}

bind -x "\"${GIT_HASH_KEY:-"\\C-g"}\": \"inline_git_hash_select\""
